<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_workflow" model="ir.ui.view">
        <field name="name">product.product.common.form.workflow</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_approve" string="Approve" groups="product_workflow.group_product_manager" type="object" states="draft" class="btn-primary"/>
                <button name="action_reset" string="Reset to draft" type="object" groups="product_workflow.group_product_manager" states="approved" class="btn-primary"/>
                <field name="state" widget="statusbar"/>
            </header>
        </field>
    </record>
</odoo>